{
  "manifest_version": 2,
  "name": "__MSG_ExtensionName__",
  "description": "__MSG_ExtensionDescription__",
  "version": "0.34.1",
  "author": "Danny Lin",
  "default_locale": "en",

  "browser_specific_settings": {
    "gecko": {
      "id": "webscrapbook@danny0838.addons.mozilla.org",
      "strict_min_version": "52.0"
    }
  },

  "homepage_url": "https://github.com/danny0838/webscrapbook",

  "icons": {
    "32": "core/scrapbook_32.png",
    "128": "core/scrapbook_128.png"
  },

  "permissions": [
    "contextMenus",
    "downloads",
    "history",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "scripts": [
      "core/common.js",
      "core/optionsAuto.js",
      "core/background.js",
      "capturer/extension.js",
      "viewer/background.js"
    ]
  },

  "web_accessible_resources": [
    "viewer/load.html"
  ],

  "options_ui": {
    "browser_style": true,
    "open_in_tab": true,
    "page": "core/options.html"
  },

  "browser_action": {
    "default_icon": {
      "32": "core/scrapbook_32.png",
      "128": "core/scrapbook_128.png"
    },
    "default_title": "__MSG_ExtensionName__",
    "default_popup": "core/browserAction.html"
  },

  "page_action": {
    "default_icon": {
      "32": "core/scrapbook_32.png",
      "128": "core/scrapbook_128.png"
    },
    "default_title": "__MSG_ExtensionName__",
    "default_popup": "core/browserAction.html"
  },

  "sidebar_action": {
    "default_title": "__MSG_ExtensionName__",
    "default_panel": "core/scrapbook.html",
    "default_icon":  {
      "32": "core/scrapbook_32.png",
      "128": "core/scrapbook_128.png"
    },
    "open_at_install": false
  }
}
